local list = fs.list(shell.getCurrentDir())

local dirs,files = {},{}

for k,v in pairs(list) do
  if(fs.isDir(fs.combine(shell.getCurrentDir(),v))) then
    dirs[#dirs+1] = v
  else
    files[#files+1] = v
  end
end

local perLine = 8
local current = 1

term.setTextColor(colors.yellow)
for k,v in pairs(dirs) do
  _ENV[current < perLine and "write" or "print"](v.. " ")
  current = current + 1
  if(current>perLine) then current = 1 end
end

term.setTextColor(colors.white)
for k,v in pairs(files) do
  _ENV[current < perLine and "write" or "print"](v.. " ")
  current = current + 1
  if(current>perLine) then current = 1 end
end

print()
